<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFFFF"
    android:clickable="true"
    android:longClickable="true"
    android:animateLayoutChanges="true">


    <CheckBox
        android:id="@+id/task_completed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:longClickable="false"
        android:paddingRight="10dp"
        android:paddingTop="40dp" />

    <TextView
        android:id="@+id/task_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingTop="0dp"
        android:text="Task"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black" 
        android:clickable="true"/>

    <TextView
        android:id="@+id/task_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/task_name"
        android:paddingLeft="10dp"
        android:text="Subtitle Text"/>


    <TextView
        android:id="@+id/rt_describe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/task_category"
        android:layout_alignTop="@+id/task_name"
        android:layout_marginRight="18dp"
        android:layout_toLeftOf="@+id/task_completed"
        android:paddingTop="20dp"
        android:text="Rotten Tomatoe&apos;s Score"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/black"
        android:textSize="7sp" 
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/rt_certified_fresh"
        android:layout_width="15sp"
        android:layout_height="15sp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="190dp"
        android:layout_alignBottom="@+id/task_category"
        android:src="@drawable/rt_certified_fresh"
        android:visibility="gone" />
    
    <ImageView
        android:id="@+id/rt_fresh"
        android:layout_width="15sp"
        android:layout_height="15sp"
        android:layout_alignParentLeft="true"
        android:layout_alignBottom="@+id/task_category"
        android:layout_marginLeft="190dp"
        android:src="@drawable/rt_fresh" 
        android:visibility="gone"/>
    
    <ImageView
        android:id="@+id/rt_rotten"
        android:layout_width="15sp"
        android:layout_height="15sp"
        android:layout_alignParentLeft="true"
        android:layout_alignBottom="@+id/task_category"
        android:layout_marginLeft="190dp"
        android:src="@drawable/rt_rotten" 
        android:visibility="gone"/>
    
    <ImageView
        android:id="@+id/rt_error"
        android:layout_width="15sp"
        android:layout_height="15sp"
        android:layout_alignParentLeft="true"
        android:layout_alignBottom="@+id/task_category"
        android:layout_marginLeft="190dp"
        android:src="@drawable/ic_action_error" 
        android:background="@android:color/black"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/rt_rating"
        android:layout_width="35sp"
        android:layout_height="20sp"
        android:layout_alignBottom="@+id/task_category"
        android:text="99%"
        android:layout_marginLeft="210dp"
        android:textAppearance="?android:attr/textAppearanceMedium" 
        android:visibility="gone"
        android:textColor="@android:color/black"/>
	
	<LinearLayout android:id="@+id/toolbar"
	    android:layout_marginBottom="-15dp"
	    android:visibility="gone"
	    android:layout_height="28dip"	
	    android:layout_width="fill_parent"
	    android:orientation="horizontal"
	    android:layout_below="@id/task_category">


	 	    <TextView
	        android:id="@+id/toolbar_date"
	        android:layout_width="wrap_content"
	        android:layout_height="28dip"
	        android:paddingBottom="3dip"
	        android:text="Extra Info 1"
	        android:paddingLeft="10dip" />


	
	    <TextView
	        android:id="@+id/toolbar_lat"
	        android:layout_width="wrap_content"
	        android:layout_height="28dip"
	        android:text="Extra Infro 2" 
	        android:paddingLeft="3dip"
	        android:paddingBottom="3dip"/>
	    	    <TextView
	        android:id="@+id/toolbar_long"
	        android:layout_width="wrap_content"
	        android:layout_height="28dip"
	        android:text="Extra Infro 2" 
	        android:paddingBottom="3dip"
	        android:paddingLeft="3dip"/>

	</LinearLayout>
</RelativeLayout>

